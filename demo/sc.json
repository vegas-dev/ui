"scripts": {
"clean": "rimraf dist/{css/*,js/*}",
"watch": "run-p watch:*",
"build": "run-s build:*",
"scss": "node-sass --output-style compressed -o dist/css sources/scss/app.scss",
"babel": "mkdirp dist/js -p && babel sources/js -o dist/js/vgapp.js && babel --presets minify sources/js -o dist/js/vgapp.min.js",
"scss:vgnav": "node-sass --output-style compressed -o dist/css/vgnav sources/scss/modules/VGNav/vgnav.scss",
"scss:vgsidebar": "node-sass --output-style compressed -o dist/css/vgsidebar sources/scss/modules/VGSidebar/vgsidebar.scss",
"babel:vgnav": "mkdirp dist/js -p && babel sources/js/modules/VGNav/vgnav.js -o dist/js/vgnav.js && babel --presets minify sources/js/modules/VGNav/vgnav.js -o dist/js/vgnav.min.js",
"babel:vgsidebar": "mkdirp dist/js -p && babel sources/js/modules/VGSidebar/vgsidebar.js -o dist/js/vgsidebar.js && babel --presets minify sources/js/modules/VGSidebar/vgsidebar.js -o dist/js/vgsidebar.min.js",
"babel:vgspy": "mkdirp dist/js -p && babel sources/js/modules/VGSpy/vgspy.js -o dist/js/vgspy.js && babel --presets minify sources/js/modules/VGSpy/vgspy.js -o dist/js/vgspy.min.js",
"build:css": "run-s scss",
"build:css:vgnav": "run-s scss:vgnav",
"build:css:vgsidebar": "run-s scss:vgsidebar",
"build:js": "run-s babel",
"build:js:vgnav": "run-s babel:vgnav",
"build:js:vgsidebar": "run-s babel:vgsidebar",
"build:js:vgspy": "run-s babel:vgspy",
"watch:css": "onchange \"sources/scss\" -- run-s build:css",
"watch:cssvgnav": "onchange \"sources/scss/modules/VGNav\" -- run-s build:css:vgnav",
"watch:cssvgsidebar": "onchange \"sources/scss/modules/VGSidebar\" -- run-s build:css:vgsidebar",
"watch:js": "onchange \"sources/js\" -- run-s build:js",
"watch:jsvgnav": "onchange \"sources/js/modules/VGNav\" -- run-s build:js:vgnav",
"watch:jsvgsidebar": "onchange \"sources/js/modules/VGSidebar\" -- run-s build:js:vgsidebar",
"watch:jsvspy": "onchange \"sources/js/modules/VGSpy\" -- run-s build:js:vgspy"
},
"devDependencies": {
"@babel/cli": "^7.11.6",
"@babel/core": "^7.11.6",
"@babel/preset-env": "^7.11.5",
"babel-preset-minify": "^0.5.1",
"@babel/plugin-transform-runtime": "^7.18.0",
"mkdirp": "^0.5.1",
"node-sass": "^4.14.1",
"npm-run-all": "^2.1.1",
"onchange": "^2.4.0",
"rimraf": "^2.5.4"
},